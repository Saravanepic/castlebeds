{% comment %} image-with-text-custom {% endcomment %}
<section class="iwt_custom {{ section.settings.sectionclass }}" style="background-color: {{section.settings.color_title}}">
  <div class="wrapper--full-padded">
    <h2 class="red_header">{{ section.settings.heading }} </h2>
    <div class="iwt_custom_col_repeater">
        {% for block in section.blocks %}
        <div class="iwt_custom_col {% if block.settings.show_as_flex %} col_content_big {% else %} col_content_small {% endif %} {% if block.settings.inverse_column %} inverse_column {% endif %}">
          <div class="content_part">
            {% if block.settings.text != blank %}
                <div class="iwt_c_head">
                  {{ block.settings.text }}
                </div>
            {% endif %}
                <div class="iwt_c_text">
                  {{ block.settings.textarea }}
                </div>
          </div>
          <div class="image_part">
             <img src="{{ block.settings.block_image | image_url : master}}" alt="{{  block.settings.text }}" class="img-fluid" loading="lazy"/>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
</section>


{% schema %}
  {
    "name": "IWT - Custom",
	"settings": [
      {
            "type": "text",
            "id": "sectionclass",
            "label": "Class for styling colors"
      },
      {
            "type": "text",
            "id": "heading",
            "label": "Heading"
      },
      {
        "type": "color",
        "id": "color_title",
        "label": "Background color",
        "default": "#FFFFFF"
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "Column",
        "settings": [
          {
            "type": "checkbox",
            "id": "show_as_flex",
            "label": "Show 60-40 Ratio",
            "default": true
          },
          {
            "type": "checkbox",
            "id": "inverse_column",
            "label": "Inverse Column",
            "default": false
          },
          {
            "type": "textarea",
            "id": "text",
            "label": "Title"
          },
          {
           "type": "textarea",
           "id": "textarea",
           "label": "Textarea"
         },
        {
          "type": "image_picker",
          "id": "block_image",
          "label": "Image"
        }
        ]
      }
    ],
"presets": [
    {
      "name": "IWT - Custom"
    }
  ]
  }
{% endschema %}

