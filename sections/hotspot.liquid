{% comment %} image-with-text-custom {% endcomment %}
<section class="iwt_custom iwt_hotspot_info {{ section.settings.sectionclass }}" style="background-color: {{section.settings.color_title}}">
  <div class="wrapper--full-padded">
    <h2 class="red_header">{{ section.settings.heading }} </h2>


    <div class="hotspot-flex">
    <!-- Image with hotspots -->
    <div class="hotspot-container">
      <img
        src="https://cdn.shopify.com/s/files/1/0047/1665/8762/files/Website_CB_1.png?v=1695752751"
        alt="Image with Hotspots"
        class="img-fluid"
      />


      {% assign count = 0 %}
 {% for block in section.blocks %}
           {% assign count = count | plus: 1 %}
  <!-- Hotspot {{ count }} -->
      <div
        class="hotspot"
        style="left: {{ block.settings.left }}%; top: {{ block.settings.top }}%"
        onclick="showContent('content{{ count }}')"
      >
        {{ count }}
      </div>
      
  {% endfor %}

    </div>

    <!-- Content container -->
    <div class="content-container">
{% assign count = 0 %}
 {% for block in section.blocks %}
           {% assign count = count | plus: 1 %}
   <!-- Content {{ count }} -->
    <div id="content{{ count }}" class="content">
        <h2>{{ count }} . {{ block.settings.text }}</h2>
        <p>{{ block.settings.textarea }}</p>
      </div>
  {% endfor %}

    </div>

      
    </div>
    <!--  -->
    
    </div>
</section>
<style>

.hotspot-flex {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
      margin: 60px 0 0;
}

  
      /* Style for the hotspot container */
      .hotspot-container {
        position: relative;
        display: inline-block;
      }

      /* Style for the hotspot */
      
       .hotspot {
    position: absolute;
    background-color: #A35649;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #FFF;
    font-size: 14px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
         animation:zoom-in-zoom-out 1.5s ease infinite;
}
  @keyframes zoom-in-zoom-out {
  0% {
    transform: scale(1, 1);
  }
  50% {
    transform: scale(1.15, 1.15);
  }
  100% {
    transform: scale(1, 1);
  }
}


      /* Style for the content */
      .content {
        display: none;
      }

  .content-container h2 {
    color: #FFF;
    font-size: 20.849px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    letter-spacing: 0.537px;
    text-transform: uppercase;
    border-radius: 10.327px;
    background: #A35649;
    padding: 8px;
    text-align: center;
    margin: 0 0 16px;
}

.content-container p {
    color: #231F20;
    text-align: left;
    font-size: 18.653px;
    font-style: normal;
    font-weight: 400;
    line-height: 24.914px; /* 140% */
}
  #content1{
    display:block;
  }

  @media all and (max-width:767px){
    .hotspot-flex {
    grid-template-columns: 1fr;
}

.hotspot {
    font-size: 10px;
    width: 18px;
    height: 18px;
}

.content-container h2 {
    font-size: 17px;
    line-height: 23px;
    padding: 10px;
}

.content-container p {
    font-size: 15px;
    line-height: 21px;
}
  }
    </style>

 <script>
      // Function to show content related to the clicked hotspot and hide other content
      function showContent(contentId) {
        var contentElements = document.querySelectorAll(".content");
        contentElements.forEach(function (element) {
          element.style.display = "none";
        });

        var contentToShow = document.getElementById(contentId);
        contentToShow.style.display = "block";
      }
    </script>

